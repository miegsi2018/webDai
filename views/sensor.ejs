  <script>
    function whynot() {



      google.charts.load('current', {
        'packages': ['corechart']
      });
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {
        var data = google.visualization.arrayToDataTable([
          ['data', 'temperature'],
          <% for (var e =0 ; e < graph.length -2; e++) { %>

          ['<%= graph[e].data%>', <%=graph[e].temperature%>],
          <% } %>
        ]);

        var options = {
          legend: {
            position: 'none'
          },
          title: 'Temperatura nas últimas 24 Horas',
          hAxis: {
            slantedText: 1,
            showTextEvery: 300,
            title: 'ºC',
            titleTextStyle: {
              color: '#333'
            }
          },
          vAxis: {
            minValue: 0
          }
        };

        var chart = new google.visualization.AreaChart(document.getElementById(
          'chartContainer'));
        chart.draw(data, options);
      }

    }
    window.onload = function () {

      whynot();
    }

    function refresh() {
      $('#chartContainer').load('/room/<%=division%>/<%=casa1%> #chartContainer > * ');
      whynot();
    }
  </script>
